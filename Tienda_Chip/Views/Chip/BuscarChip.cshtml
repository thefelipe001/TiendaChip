@using Model.Entity
@model List<Chip>
@{
    ViewBag.Title = "BuscarChip";
}
<div class="panel panel-default">
    <div class="panel-heading" style="background:#2C3E50; color:#ffffff;"><h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Chip por:</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-4">
                            @Html.Label("Compañia", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-actions">
                            <input class="btn btn-primary" type="submit" value="Buscar" />
                        </div>

                    </div>
                  
                </fieldset>
            </div>
           

        }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Numero telefonico</th>
        <th>Nombre</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Numero</th>
            <th>@item.Compañia</th>

        </tr>
    }
    <tr></tr>
</table>
<div class="text-primary text-danger text-center">
    @ViewBag.mensajeErrorServidor;
</div>